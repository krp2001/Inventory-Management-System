
@model CreateProductViewModel
@{
    ViewData["Title"] = "CreateProduct";
    
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Create Product</h1>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct">
            <div class="text-danger"></div>
            @*<div class="form-group">
            <input asp-for="ProductId" class="form-control" type="hidden" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Items</label>
                <select name="ItemIds" multiple="multiple" class="form-control" asp-items="@Model.ItemsForDropdown">
                    
                </select>
                <span asp-validation-for="ItemIds" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">

                <div class="form-group">
                    <button asp-action="CreateProduct" asp-controller="Admin" class="btn btn-primary">Save</button>
                    <a class="btn btn-danger" asp-action="ProductItem" asp-controller="Admin">Back to List</a>
                </div>
                <br />


            </div>
        </form>

    </div>
</div>

