@model IList<CartViewModel>;
@{
    ViewData["Title"] = "Cart";
}

@if (Model.Any())
{
    <form method="post">
        <div class="container p-3">
            <div class="row pt-4">
                <div class="col-6">
                    <h1><i class="bi bi-cart"></i>Cart</h1>
                </div>
            </div>
            <br />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Price
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model[i].ProductName
                            </td>
                            <td>
                                @Model[i].Quantity
                            </td>
                            <td>
                                @Model[i].Price
                            </td>
                            <td>
                                <a asp-action="RemoveCart" asp-controller="User" asp-route-ProductId="@Model[i].ProductId" class="btn btn-danger"> Delete</a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="4">
                            <a asp-action="Checkout" asp-controller="User" class="btn btn-success float-start">Checkout</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </form>
}
else
{
 <br/>
 <br/>
    <h3 class="text-center">Your Cart Is Empty!</h3>
}
