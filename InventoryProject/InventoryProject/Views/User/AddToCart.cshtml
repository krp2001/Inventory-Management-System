@model AddToCartViewModel;
@{
    ViewData["Title"] = "AddToCart";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Add To Cart</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div ></div>

                <div class="form-group">
                    <input asp-for="ProductId" type="hidden" class="form-control"/>
                    <label asp-for="ProductCode" class="control-label"></label>
                    <input asp-for="ProductCode" class="form-control" disabled />
                    
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" disabled />
                    
                </div>
                <div class="form-group">
                    <label asp-for="AvailableQuantity" class="control-label"></label>
                    <input asp-for="AvailableQuantity" class="form-control" disabled />
                    
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" disabled/>
                    
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger">

                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Add</button>
                    <a class="btn btn-danger" asp-action="Home" asp-controller="User">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

